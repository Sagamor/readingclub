---
layout: null
---
<?xml version="1.0" encoding="UTF-8"?>
<rss version="2.0" xmlns:atom="http://www.w3.org/2005/Atom">
  <channel>
    <title>{{ site.title | xml_escape }}</title>
    <description>{{ site.description | xml_escape }}</description>
    <link>{{ site.url }}{{ site.baseurl }}/</link>
    <atom:link href="{{ "/feed.xml" | prepend: site.baseurl | prepend: site.url }}" rel="self" type="application/rss+xml"/>
    <pubDate>{{ site.time | date_to_rfc822 }}</pubDate>
    {% for post in site.posts %}
      <item>
        <title>{{ post.book-author | xml_escape }} {{ post.book-title | xml_escape }}</title>
        <description>
          §{{ post.title }}<br/>
          {% if post.event %} — {{ post.event }}{% endif %}<br/>
          {{ post.book-author }} {{ post.book-title }}<br/>
          {% if post.part %}{{ post.part | markdownify | replace: ';', '|' }}{% endif %}<br/>
          {{ post.date | date: "%b %-d, %Y" }} {{ post.reader }}
          <br/><br/>
            <a href="{{ post.recording }}" class="recording-link {% if post.recording %}link{% else %} nolink{% endif %}">Слушать запись</a>
            <a href="{{ post.text-file }}" class="text-file-link {% if post.text-file %}link{% else %} nolink{% endif %}">Читать самостоятельно</a>
        </description>
        <pubDate>{{ post.date | date: "%b %-d, %Y" }}</pubDate>
        <link>{{ post.url | prepend: site.baseurl | prepend: site.url }}</link>
        <guid isPermaLink="true">{{ post.url | prepend: site.baseurl | prepend: site.url }}</guid>
        {% for tag in post.tags %}
        <category>{{ tag | xml_escape }}</category>
        {% endfor %}
        {% for cat in post.categories %}
        <category>{{ cat | xml_escape }}</category>
        {% endfor %}
      </item>
    {% endfor %}
  </channel>
</rss>
